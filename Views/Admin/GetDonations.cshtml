@model IEnumerable<GanpatiBappa.Models.DonationModel>

@{
    ViewBag.Title = "GetDonations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="width78">
    <p style="text-align:center; margin:10px 0; color:#fff; font-weight:600; text-transform:capitalize; font-size:18px;">Donations Details</p>

    <table class="table">
        <tr>
            <th>
                Sr.No
            </th>
            <th>
                Donater Name
            </th>
            <th>
                Donate Amount
            </th>
            <th>
                Donation Date
            </th>
            <th>
                Donation <br />Recieved<br /> By
            </th>
            <th>
                Payment By
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.d_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.donaterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.donateAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.donationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.donationRecievedBy)
        </td>
        @if (item.PaymentBy == "Cash")
        {
            <td style="color:red">
                @Html.DisplayFor(modelItem => item.PaymentBy)
            </td>
        }
        else
        {
            <td style="color:green">
                @Html.DisplayFor(modelItem => item.PaymentBy)
            </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
        }

    </table>
    </div>